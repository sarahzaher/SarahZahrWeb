@inject NavigationManager NavigationManager
<img src="Content/icon/logo_T.png" id="MainLogo" />
<div class="container-fluid d-none  d-md-flex justify-content-md-center align-items-md-center">

    @*<div class="row">
            <div class="progress" id="progress1">
